<MudCard style="padding: 3em" Elevation="0" >
    <MudPaper Elevation="0">
        @if (FoldersList != null)
            {
               
                <MudPaper Elevation="0" Class="d-flex align-content-center align-items-center">
                    <MudIconButton OnClick="BackFolder" Icon="@Icons.Filled.DriveFolderUpload" Color="Color.Primary"/>
                    <MudText>Path:@FoldersList.First().CurrentPath</MudText>
                </MudPaper>
                
                <MudList   Clickable="true">
                    @foreach (var item in FoldersList!)
                    {
                      <MudListItem OnClick="() => InFolder(item.Name!)" Text="@item.Name" Icon="@Icons.Filled.Folder" IconColor="Color.Success" />  
                    }
                </MudList>
            }
        
    </MudPaper>
    
</MudCard>